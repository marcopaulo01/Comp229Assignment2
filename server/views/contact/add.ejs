<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>

<div class="containter">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Name</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter Name"
                name="name" required>
            </div>

            <div class="form-group">
                <label for="numberTextField">Number</label>
                <input type="number" class="form-control"
                id="numberTextField"
                placeholder="Enter number"
                name="number" required>
            </div>

            <div class="form-group">
                <label for="emailTextField">Email</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter Email"
                name="email" required>
            </div>

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
                
                <a href="/contact-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>
        </form>
    </div>
</div>
</div>

<%-include ../partials/bottom_nav.ejs%>
<%-include ../partials/footer.ejs%> 